<script>
  function changeTiming() {
    var timing = prompt("Please enter new timing in seconds")
    sessionStorage.setItem('start_time', timing)
  }
</script>
<div class="row">

  <div class="col-xs-2"></div>
  <div class="col-xs-4">
    <h2 class="fronttitle"> Participants in Wave <%= params[:wave_number] %></h2>
    <!--<%= form_tag search_bib_participants_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search], autofocus: true%>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>-->
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Bib number</th>
          <th>Wave number</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @participants.each do |participant| %>
          <tr>
            <td><%= participant.name %></td>
            <td><%= participant.bib_number %></td>
            <td><%= participant.wave_number %></td>
            <!--<td><%= link_to 'Show', participant %></td>
            <td><%= link_to 'Edit', edit_participant_path(participant) %></td>-->
            <!--<td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-2">
        <%= button_to('Back', "/participants/by_wave/" + (params[:wave_number].to_i - 1).to_s, {method: :get}) %>
      </div>
      <div class="col-md-2">
        <%= button_to('Next', "/participants/by_wave/" + (params[:wave_number].to_i + 1).to_s, {method: :get}) %>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>

  <div class="col-xs-4">
    <h2 class="fronttitle"> Time to start of race</h2>
    <div class="clock" style="margin:2em; width: 300px; margin-left: auto; margin-right: auto"></div>
    <div class="message"></div>
    <button class="Start">Start</button>
    <button class="Stop">Stop</button>
    <button class="Reset">Reset</button> <br> <br>
    <button class="ChangeTiming" onclick="changeTiming()">Change Timing</button>
  </div>

  <div class="col-xs-2"></div>

</div>
