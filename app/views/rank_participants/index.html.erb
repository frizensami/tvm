<h1 class = "fronttitle">Listing Rank Participants</h1>

<%= form_for(@rank_participant, remote: true) do |f| %>
  <% if @rank_participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rank_participant.errors.count, "error") %> prohibited this rank_participant from being saved:</h2>

      <ul>
      <% @rank_participant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rank %><br>
    <%= f.number_field :rank %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :bib_number %><br>
    <%= f.text_field :bib_number %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit' %>
    <%= f.submit 'Force Submit' %>
  </div>
<% end %>

<%= button_to 'Undo', '/rank_participants/undolist', :method => "get" %> <br>
<p id="notice"><%= notice %></p>


<h3> Missing Ranks: <%= @missing %> </h3>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Bib number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rank_participants.each do |rank_participant| %>
      <tr>
        <td><%= rank_participant.rank %></td>
        <td><%= rank_participant.name %></td>
        <td><%= rank_participant.bib_number %></td>
        <td><%= link_to 'Show', rank_participant %></td>
        <td><%= link_to 'Edit', edit_rank_participant_path(rank_participant) %></td>
        <td><%= link_to 'Destroy', rank_participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rank participant', new_rank_participant_path %>
