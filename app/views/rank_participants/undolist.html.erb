<h1> Undo List </h1>

<h1>Listing Rank Participants</h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Bib number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rank_participants.each do |rank_participant| %>
      <tr>
        <td><%= rank_participant.rank %></td>
        <td><%= rank_participant.name %></td>
        <td><%= rank_participant.bib_number %></td>
        <td><%= link_to 'Show', rank_participant %></td>
        <td><%= link_to 'Undo Deletion', "/rank_participants/#{rank_participant.id}/undo_deletion", method: :patch, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Destroy', "/rank_participants/#{rank_participant.id}/really_delete", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>