<%= form_for(@wave, remote: true) do |f| %>
  <% if @wave.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wave.errors.count, "error") %> prohibited this wave from being saved:</h2>

      <ul>
      <% @wave.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :wave_number %><br>
    <%= f.number_field :wave_number %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



<p id="notice"><%= notice %></p>

<h1>Listing Waves</h1>
<%= button_to 'Undo', '/waves/undolist', :method => "get" %> <br>
<table>
  <thead>
    <tr>
      <th>Wave number</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waves.each do |wave| %>
      <tr>
        <td><%= wave.wave_number %></td>
        <% Time.zone = "Singapore" %>
        <td><%= wave.start_time %></td>
        <td><%= link_to 'Show', wave %></td>
        <td><%= link_to 'Edit', edit_wave_path(wave) %></td>
        <td><%= link_to 'Destroy', wave, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

