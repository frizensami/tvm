<p id="notice"><%= notice %></p>

<h1>Listing Waves</h1>

<table>
  <thead>
    <tr>
      <th>Wave number</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waves.each do |wafe| %>
      <tr>
        <td><%= wafe.wave_number %></td>
        <td><%= wafe.start_time %></td>
        <td><%= link_to 'Show', wafe %></td>
        <td><%= link_to 'Edit', edit_wafe_path(wafe) %></td>
        <td><%= link_to 'Destroy', wafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

