<p id="notice"><%= notice %></p>

<h1>Listing Timings for Category: </h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Identifier</th>
      <th>Timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.category %></td>
        <td><%= team.identifier %></td>
        <% if team.sum_of_participant_timings != Float::INFINITY %>
        <td><%= Time.at(team.sum_of_participant_timings).utc.strftime("%H:%M:%S.%3N") %></td>
        <% else %>
        <td> - </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

